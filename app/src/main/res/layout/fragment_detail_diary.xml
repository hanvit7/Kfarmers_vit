<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/Main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFFFFF"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/CommonLargePadding"
                    android:paddingLeft="@dimen/CommonLargePadding"
                    android:paddingRight="@dimen/CommonLargePadding" >

                    <RelativeLayout
                        android:id="@+id/Header1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <ImageView
                            android:id="@+id/Profile"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:contentDescription="@string/CommonDummy"
                            android:scaleType="centerCrop"
                            android:src="@drawable/common_dummy" />

                        <RelativeLayout
                            android:id="@+id/Info"
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_toRightOf="@+id/Profile" >

                            <TextView
                                android:id="@+id/Farmer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/CommonMediumMargin"
                                android:singleLine="true"
                                android:textColor="@color/CommonText"
                                android:textSize="@dimen/CommonMediumText"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/Pipe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/CommonMediumMargin"
                                android:layout_toRightOf="@+id/Farmer"
                                android:text="@string/CommonPipe"
                                android:textColor="#d1d1d1"
                                android:textSize="@dimen/CommonSmallText" />

                            <TextView
                                android:id="@+id/Category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/CommonMediumMargin"
                                android:layout_toRightOf="@+id/Pipe"
                                android:singleLine="true"
                                android:textColor="#8b7a62"
                                android:textSize="@dimen/CommonMediumText"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/Date"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_below="@+id/Info"
                            android:layout_marginLeft="@dimen/CommonMediumMargin"
                            android:layout_toRightOf="@+id/Profile"
                            android:gravity="center_vertical"
                            android:textColor="#a7a7a7"
                            android:textSize="@dimen/CommonMediumText" />

                        <LinearLayout
                            android:id="@+id/shareView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/button_diary_share"
                            android:orientation="vertical" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/CommonLargePadding"
                        android:background="#eaeaea" />

                    <RelativeLayout
                        android:id="@+id/Header2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/CommonLargePadding"
                        android:paddingTop="@dimen/CommonLargePadding" >

                        <TextView
                            android:id="@+id/Address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#999999"
                            android:textSize="@dimen/CommonMediumText" />

                        <TextView
                            android:id="@+id/FoodMile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:drawableLeft="@drawable/icon_food_mile"
                            android:drawablePadding="4dp"
                            android:textColor="#ae8b80"
                            android:textSize="@dimen/CommonMediumText" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/Body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/CommonLargeMargin"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/Auth1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/CommonSmallMargin"
                                android:layout_marginRight="@dimen/CommonSmallMargin"
                                android:contentDescription="@string/CommonDummy"
                                android:src="@drawable/icon_mark_2" />

                            <TextView
                                android:id="@+id/Auth1Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:singleLine="true"
                                android:textColor="#000000"
                                android:textSize="@dimen/CommonSmallText" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/Auth2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/CommonSmallMargin"
                                android:layout_marginRight="@dimen/CommonSmallMargin"
                                android:contentDescription="@string/CommonDummy"
                                android:src="@drawable/icon_mark_3" />

                            <TextView
                                android:id="@+id/Auth2Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:singleLine="true"
                                android:textColor="#000000"
                                android:textSize="@dimen/CommonSmallText" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/Auth3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/CommonSmallMargin"
                                android:layout_marginRight="@dimen/CommonSmallMargin"
                                android:contentDescription="@string/CommonDummy"
                                android:src="@drawable/icon_mark_10" />

                            <TextView
                                android:id="@+id/Auth3Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:singleLine="true"
                                android:textColor="#000000"
                                android:textSize="@dimen/CommonSmallText" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/bottomLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <!-- Rows -->

                        <RelativeLayout
                            android:id="@+id/ReleaseLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/CommonLargeMargin" >

                            <TextView
                                android:id="@+id/ReleaseTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="출하"
                                android:textColor="@color/CommonText"
                                android:textSize="@dimen/CommonMediumText"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ReleaseDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/CommonMediumPadding"
                                android:layout_toRightOf="@+id/ReleaseTitle"
                                android:textColor="@color/CommonConcept"
                                android:textSize="@dimen/CommonMediumText"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/ReleaseNote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/ReleaseTitle"
                                android:layout_marginTop="@dimen/CommonMediumPadding"
                                android:textColor="#bfbfbf"
                                android:textSize="@dimen/CommonMediumText" />
                        </RelativeLayout>

                        <View
                            android:id="@+id/LineLayout"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:layout_marginTop="@dimen/CommonLargePadding"
                            android:background="#eaeaea" />

                        <RelativeLayout
                            android:id="@+id/WeatherLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/CommonLargeMargin" >

                            <TextView
                                android:id="@+id/SkyTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="날씨"
                                android:textColor="@color/CommonText"
                                android:textSize="@dimen/CommonMediumText"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/Temperature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/CommonMediumPadding"
                                android:layout_toRightOf="@+id/SkyTitle"
                                android:textColor="@color/CommonConcept"
                                android:textSize="@dimen/CommonMediumText"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/Humidity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/CommonMediumPadding"
                                android:layout_toRightOf="@+id/Temperature"
                                android:textColor="@color/CommonConcept"
                                android:textSize="@dimen/CommonMediumText"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/SkyNote"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/SkyTitle"
                                android:layout_marginTop="@dimen/CommonMediumPadding"
                                android:textColor="#bfbfbf"
                                android:textSize="@dimen/CommonMediumText" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/like_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/get_list_post"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="12dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:paddingTop="12dp"
                        android:src="@drawable/icon_like2" />

                    <TextView
                        android:id="@+id/likeText"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="-6px"
                        android:gravity="center_vertical"
                        android:paddingRight="15dp"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="@dimen/CommonXXLargePadding"
                    android:visibility="visible"
                    android:id="@+id/product_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--
                         <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#bbbbbb" />
                    -->

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/CommonLargePadding"
                        android:layout_marginRight="@dimen/CommonLargePadding"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/product_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:text="관련상품"
                            android:textColor="#8b7a62"
                            android:textSize="@dimen/CommonMediumByLargeText"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:background="@drawable/product_box_strok"
                            android:layout_below="@id/product_count"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <com.leadplatform.kfarmers.view.base.DynamicFrameLayout xmlns:custom="http://schemas.android.com/apk/res/com.leadplatform.kfarmers"
                                android:id="@+id/productView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                custom:viewRatio="0.30">

                                <com.leadplatform.kfarmers.view.base.InfiniteViewPager
                                    android:layout_below="@id/product_count"
                                    android:id="@+id/image_viewpager"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                            </com.leadplatform.kfarmers.view.base.DynamicFrameLayout>

                        </RelativeLayout>




                        <!--
                             <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_above="@id/image_viewpager"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="#bbbbbb" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_below="@id/image_viewpager"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="#bbbbbb" />
                        -->


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/CommonSmallMargin"
                        android:padding="2dp"
                        android:gravity="center_horizontal"
                        android:id="@+id/Paging"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>