<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/btn_minicart_option_bg"
    android:orientation="vertical"
    android:paddingLeft="@dimen/CommonMediumPadding"
    android:paddingRight="@dimen/CommonMediumPadding"
    android:paddingTop="@dimen/CommonMediumPadding">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6.6999817dip"
        android:orientation="vertical">

        <TextView
            android:id="@+id/NoticText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textColor="#FFf85b2f"
            android:visibility="gone"
            android:textSize="13.329987dip" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="#ff323b4a"
            android:textSize="13.329987dip" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="8.0dip"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/MInus"
                android:layout_width="26.699982dip"
                android:layout_height="26.699982dip"
                android:background="@drawable/w_btn_minicart_count_minus" />

            <TextView
                android:id="@+id/Count"
                android:layout_width="41.899994dip"
                android:layout_height="26.699982dip"
                android:background="@drawable/w_bg_minicart_count"
                android:gravity="center"
                android:singleLine="true"
                android:text="1"
                android:textColor="#ff323b4a"
                android:textSize="16.669983dip" />

            <ImageButton
                android:id="@+id/Plus"
                android:layout_width="26.699982dip"
                android:layout_height="26.699982dip"
                android:background="@drawable/w_btn_minicart_count_plus" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Price"
                android:layout_width="wrap_content"
                android:layout_height="26.699982dip"
                android:layout_marginRight="6.6999817dip"
                android:gravity="center|right"
                android:text="0ì›"
                android:textColor="#fff70800"
                android:textSize="16.0dip"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/DellBtn"
                android:layout_width="26.699982dip"
                android:layout_height="26.699982dip"
                android:background="@drawable/w_btn_minicart_close" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/BottomLine"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="1.0px"
        android:background="#ffa1aeb2" />
</LinearLayout>