<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/CommonSmallPadding"
              android:paddingLeft="@dimen/CommonSmallPadding"
              android:paddingRight="@dimen/CommonSmallPadding"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/get_list_post"
            android:padding="@dimen/CommonMediumMargin"
            android:orientation="vertical">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:textSize="@dimen/CommonLargeText"
                        android:textStyle="bold"
                        android:id="@+id/Name"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:textSize="@dimen/CommonMediumText"
                        android:id="@+id/Title"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:layout_marginTop="@dimen/CommonSmallMargin"
                        android:textColor="@color/minicart_cart_disable"
                        android:textSize="@dimen/CommonSmallByMediumText"
                        android:maxLines="1"
                        android:id="@+id/Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>