<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >        
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/CommonLargeRow"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:background="#FFFFFF" >
		<RelativeLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.33"
			android:gravity="center" >
			<Spinner
				android:id="@+id/SubMenu1"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/CommonLargeRow"
				android:entries="@array/GetListDiarySubMenu2_1"
				android:background="@null" />
			<ImageView
				android:layout_toRightOf="@+id/SubMenu1"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/CommonLargeRow"
				android:src="@drawable/button_menu"
				android:contentDescription="@string/CommonDummy" />
		</RelativeLayout>
		<View
			android:layout_width="0.5dp"
			android:layout_height="20dp"
			android:background="#bebdbd" />
		<RelativeLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.33"
			android:gravity="center" >
			<Spinner
				android:id="@+id/SubMenu2"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/CommonLargeRow"
				android:entries="@array/GetListDiarySubMenuAuth"
				android:background="@null" />
			<ImageView
				android:layout_toRightOf="@+id/SubMenu2"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/CommonLargeRow"
				android:src="@drawable/button_menu"
				android:contentDescription="@string/CommonDummy" />
		</RelativeLayout>
		<View
			android:layout_width="0.5dp"
			android:layout_height="20dp"
			android:background="#bebdbd" />
		<RelativeLayout
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="0.33"
			android:gravity="center" >
			<Spinner
				android:id="@+id/SubMenu3"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/CommonLargeRow"
				android:entries="@array/GetListDiarySubMenuLocalFood"
				android:background="@null" />
			<ImageView
				android:layout_toRightOf="@+id/SubMenu3"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/CommonLargeRow"
				android:src="@drawable/button_menu"
				android:contentDescription="@string/CommonDummy" />
		</RelativeLayout>
	</LinearLayout>
	
	<uk.co.senab.actionbarpulltorefresh.extras.actionbarsherlock.PullToRefreshLayout
		android:id="@+id/refresh_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#eeeeee">
	
		<ListView 
		    android:id="@id/android:list"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    />

	</uk.co.senab.actionbarpulltorefresh.extras.actionbarsherlock.PullToRefreshLayout>
	
</LinearLayout>
	
