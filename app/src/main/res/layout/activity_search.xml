<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
    <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="#FFFFFF">
		<!-- item -->
		<RelativeLayout
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:paddingBottom="250dp"
			android:layout_centerInParent="true">
			<TextView
			    android:id="@+id/EmptyString1"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="농산물, 체험명 등"
				android:textColor="#8dd427"
				android:textSize="17sp"
				android:textStyle="bold" />
			<TextView
			    android:id="@+id/EmptyString2"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@+id/EmptyString1"
				android:text="으로 검색해 보세요"
				android:textColor="#999999"
				android:textSize="17sp" />
			<TextView
			    android:id="@+id/EmptyString3"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/EmptyString1"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="7dp"
				android:text="예) 사과, 딸기체험 등"
				android:textColor="#999999"
				android:textSize="17sp" />
		</RelativeLayout>
	</RelativeLayout>
	 
    <FrameLayout
	    android:id="@+id/fragment_container"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
        />
    
    <include layout="@layout/view_progress"/>
    
</FrameLayout>    
