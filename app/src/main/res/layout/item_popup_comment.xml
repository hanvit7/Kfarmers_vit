<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
        android:textColor="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/commentBtn"
            style="@style/ButtonMediumConcept"
            android:layout_width="70dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:text="등록" />

        <EditText
            android:id="@+id/commentEdit"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignBaseline="@+id/commentBtn"
            android:layout_alignBottom="@+id/commentBtn"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/commentBtn"
            android:background="@drawable/common_selector_view_gray"
            android:hint="댓글을 입력해주세요."
            android:padding="7dp"
            android:privateImeOptions="defaultInputmode=korean"
            android:singleLine="true"
            android:textColor="@color/CommonText"
            android:textColorHint="@color/CommonHint"
            android:textSize="@dimen/CommonMediumText" >

            <requestFocus />
        </EditText>
    </RelativeLayout>

</LinearLayout>