<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FF8DD427" >

    <ImageButton
        android:id="@+id/actionbar_home_image_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="#00FFFFFF"
        android:paddingLeft="12dp"
        android:src="@drawable/icon_home"
        android:visibility="gone" />

    <Button
        android:id="@+id/actionbar_left_button"
        style="@style/ButtonMediumConcept"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:textColor="#FF446219"
        android:textStyle="bold"
        android:text="취소"
        android:visibility="gone"/>

    <Button
        android:id="@+id/actionbar_right_button"
        style="@style/ButtonMediumConcept"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:textColor="#FF446219"
        android:textStyle="bold"
        android:text="등록"
        android:visibility="visible" />

    <TextView
        android:id="@+id/actionbar_title_text_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="#FFFFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>