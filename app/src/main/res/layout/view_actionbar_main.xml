    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

        <ImageButton
            android:id="@+id/secondBtn"
            style="@style/ButtonMediumConcept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="32dp"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:paddingRight="12dp"
            android:src="@drawable/button_menu_search" />



        <RelativeLayout
            android:id="@+id/chatLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/secondBtn"
            android:layout_toRightOf="@+id/secondBtn"
            android:paddingRight="12dp">

            <ImageButton
                android:id="@+id/chatBtn"
                style="@style/ButtonMediumConcept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="32dp"
                android:scaleType="center"
                android:layout_alignParentBottom="true"
                android:src="@drawable/button_menu_chat" />

            <TextView
                android:id="@+id/chatCount"
                android:text="1"
                android:background="@drawable/bg_caht"
                android:textSize="9sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/chatBtn"
                android:layout_alignRight="@+id/chatBtn" />
        </RelativeLayout>
        <ImageButton
            style="@style/ButtonMediumConcept"
            android:id="@+id/WriteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="32dp"
            android:paddingRight="12dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/chatLayout"
            android:scaleType="center"
            android:layout_alignBottom="@+id/secondBtn"
            android:src="@drawable/button_menu_write" />

    </RelativeLayout>
</RelativeLayout>