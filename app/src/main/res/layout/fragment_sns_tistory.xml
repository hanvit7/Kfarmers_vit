<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="#FFFFFF" >
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="#FFFFFF" >
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/CommonLargePadding"
			android:orientation="vertical" >
			<EditText
			    android:id="@+id/apiUrlEdit" 
			    style="@style/EditTextDefault"
				android:layout_width="match_parent"
				android:layout_height="@dimen/CommonLargeRow"
				android:layout_marginTop="@dimen/CommonMediumMargin"
				android:hint="@string/SNSTistoryApiUrl"
				android:inputType="textEmailAddress"
				android:singleLine="true" />
			<EditText
			    android:id="@+id/blogIdEdit" 
			    style="@style/EditTextDefault"
				android:layout_width="match_parent"
				android:layout_height="@dimen/CommonLargeRow"
				android:layout_marginTop="@dimen/CommonMediumMargin"
				android:hint="@string/SNSTistoryBlogID"
				android:inputType="textEmailAddress"
				android:singleLine="true" />
			<EditText
			    android:id="@+id/loginIdEdit"
			    style="@style/EditTextDefault"
				android:layout_width="match_parent"
				android:layout_height="@dimen/CommonLargeRow"
				android:layout_marginTop="@dimen/CommonMediumMargin"
				android:hint="@string/SNSTistoryLoginID"
				android:inputType="textEmailAddress"
				android:singleLine="true" />
			<EditText
			    android:id="@+id/loginPwEdit" 
			    style="@style/EditTextDefault"
				android:layout_width="match_parent"
				android:layout_height="@dimen/CommonLargeRow"
				android:layout_marginTop="@dimen/CommonMediumMargin"
				android:hint="@string/SNSTistoryLoginPW"
				android:inputType="textEmailAddress"
				android:singleLine="true" />
			<Button style="@style/ButtonLargeConcept"
				android:id="@+id/Next"
				android:layout_width="match_parent"
				android:layout_height="@dimen/CommonLargeRow"
				android:layout_marginTop="@dimen/CommonXXXLargeMargin"
				android:text="@string/SNSButtonNext" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>