<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/RepleBtn"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/CommonLargeRow"
        android:background="@color/CommonPrice">

        <TextView
            android:id="@+id/RepleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/inquiry_center"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/CommonMediumByLargeText"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_above="@id/RepleBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/CommonLargePadding"
                android:orientation="vertical">

                <TextView
                    android:layout_marginBottom="5dp"
                    android:id="@+id/Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="15dp"
                    android:textColor="#858585"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#555555"
                    android:textSize="16sp" />


                <View
                    android:layout_marginTop="@dimen/CommonLargeMargin"
                    android:layout_width="wrap_content"
                    android:layout_height="1px"
                    android:background="#555555" />

                <LinearLayout
                    android:layout_marginTop="@dimen/CommonSmallMargin"
                    android:id="@+id/Layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>