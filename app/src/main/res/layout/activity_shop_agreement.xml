<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/CommonXXLargePadding">

    <LinearLayout
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/CommonLargePadding"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/CommonMediumMargin"
                android:src="@drawable/icon_launcher" />

            <LinearLayout
                android:id="@+id/Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/CommonLargePadding"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KFAMERS"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="케이파머스 구매하기"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구매 약관(최초 1회 동의필요)" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/AgreeTextLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/AgreeBtn"
        android:layout_below="@+id/Title"
        android:background="@drawable/product_box_strok"
        android:orientation="horizontal">

        <WebView
            android:id="@+id/TermsWebView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="@dimen/CommonLargePadding" />


    </RelativeLayout>


    <Button
        android:id="@+id/AgreeBtn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/CommonLargePadding"
        style="@style/ButtonLargeConcept"
        android:text="동의하기" />

</RelativeLayout>